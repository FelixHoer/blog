{{#items}}
<div class="row blog-post">
  <div class="date col-sm-2">
    <h1>{{day}}</h1>
    <div>{{month-name}}</div>
    <div>{{year}}</div>
  </div>
  <div class="col-sm-10">
    {{{body}}}

    <div class="comments panel panel-default">

      <form class="form-horizontal panel-heading" method="post" action="/comment">
        <div class="form-group">
          <div class="col-sm-8">
            <input type="text" class="form-control" name="comment-name" placeholder="Name">
          </div>
          <div class="col-sm-4">
            <button type="submit" class="btn btn-default">Comment!</button>
          </div>
        </div>
        <textarea class="form-control" rows="3" name="comment-text" placeholder="Make a comment!"></textarea>
      </form>

      <ul class="panel-body">
        {{#comments}}
        <li>
          <div>
            <span class="comment-name">{{name}}</span>
            <span class="comment-time">{{time}}</span>
          </div>
          {{text}}
        </li>
        {{/comments}}
        {{^comments}}
        <li class="text-center">No comments yet.</li>
        {{/comments}}
      </ul>

    </div>

  </div>
</div><!-- /.blog-post -->
{{/items}}
{{^items}}
<div class="row">
  <div class="date col-sm-2"></div>
  <div class="col-sm-10">
    <p class="text-center">
    There are no articles yet.
    </p>
  </div>
</div>
{{/items}}
