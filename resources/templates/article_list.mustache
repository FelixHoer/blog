{{#items}}
<div class="row blog-post">
  <div class="date col-sm-2">
    <h1>{{day}}</h1>
    <div>{{month-name}}</div>
    <div>{{year}}</div>
  </div>
  <div class="col-sm-10">
    {{{body}}}
    <p>
      <a href="/articles/{{code}}#comments">{{comment-count}} comments</a>
    </p>
  </div>
</div><!-- /.blog-post -->
{{/items}}
{{^items}}
<div class="row">
  <div class="date col-sm-2"></div>
  <div class="col-sm-10">
    <p class="text-center">
    There are no articles yet.
    </p>
  </div>
</div>
{{/items}}
