<div class="row">

    <div class="col-sm-8 blog-main">

        {{{body}}}

        <ul class="pager">
            <li class="previous"><a href="#">&larr; Older</a></li>
            <li class="next"><a href="#">Newer &rarr;</a></li>
        </ul>

    </div><!-- /.blog-main -->

    <div class="col-sm-3 col-sm-offset-1">

        <div class="blog-sidebar">
            <h4>Recent Posts</h4>
            <ol class="list-unstyled">
                {{#recent-articles}}
                <li><a href="/article/{{code}}">{{title}}</a></li>
                {{/recent-articles}}
            </ol>
        </div>

        <div class="blog-sidebar">
            <h4>Archives</h4>
            <ol class="list-unstyled">
                {{#archive-months}}
                <li><a href="/articles/month/{{code}}">{{text}}</a></li>
                {{/archive-months}}
            </ol>
        </div>

    </div>

</div><!-- /.row -->
